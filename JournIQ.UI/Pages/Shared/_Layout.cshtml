@{
    var title = ViewData["Title"] ?? "JournIQ";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - JournIQ</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light text-dark">

    <header class="bg-dark text-white py-3 mb-4">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <a asp-page="/Index" class="text-decoration-none d-flex align-items-center">
                <img src="~/images/logo_transparent.png" alt="JournIQ Logo" style="height: 40px;" class="me-2" />
            </a>
            <nav class="mt-2 mt-md-0">
                <a asp-page="/Index" class="text-white me-4 text-decoration-none">Dashboard</a>
                <a asp-page="/Trades/Create" class="text-white me-4 text-decoration-none">New Trade</a>
                <a asp-page="/Trades/Index" class="text-white me-4 text-decoration-none">Trade Log</a>
                <a asp-page="/Tags/Index" class="text-white me-4 text-decoration-none">Tags</a>

                <!-- ✅ Add this -->
                <a asp-page="/Import/Sierra" class="text-white text-decoration-none">Import</a>
            </nav>
        </div>
    </header>


    <main class="container pb-5">
        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
            @if (TempData["Success"] is string success)
            {
                <div class="toast show bg-success text-white border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">@success</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }

            @if (TempData["Warning"] is string warning)
            {
                <div class="toast show bg-warning text-dark border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">@warning</div>
                        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }

            @if (TempData["Error"] is string error)
            {
                <div class="toast show bg-danger text-white border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">@error</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }
        </div>


        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            &copy; @DateTime.Now.Year JournIQ
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
